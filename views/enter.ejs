  <!-- ‚úÖ AJAX ÌååÏùº Ï≤®Î∂ÄÏö© Ìèº (Ï†ÄÏû•Í≥º Î≥ÑÍ∞ú) -->
  <div class="container mt-3">
    <form id="photoForm" enctype="multipart/form-data">
      <input type="file" name="picture" accept="image/*" class="btn btn-outline-primary" />
      <button type="button" onclick="uploadPhoto()" class="btn btn-outline-primary">Ï≤®Î∂Ä</button>
    </form>
    <div id="uploadResult" class="mt-2"></div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script>
    function uploadPhoto() {
      const formData = new FormData(document.getElementById('photoForm'));

      fetch('/photo', {
        method: 'POST',
        body: formData
      })
      .then(res => res.json())
      .then(data => {
        console.log('ÏóÖÎ°úÎìú Í≤∞Í≥º:', data);
        document.getElementById('uploadResult').innerText = data.message + " Í≤ΩÎ°ú: " + data.path;

        // üî• Ïà®ÏùÄ inputÏùÑ /save formÏóê ÎèôÏ†ÅÏúºÎ°ú Ï∂îÍ∞Ä
        let saveForm = document.querySelector('form[action="/save"]');
        let hiddenInput = saveForm.querySelector('input[name="uploadedPath"]');

        if (!hiddenInput) {
          hiddenInput = document.createElement('input');
          hiddenInput.type = 'hidden';
          hiddenInput.name = 'uploadedPath';
          saveForm.appendChild(hiddenInput);
        }

        hiddenInput.value = data.path; // AJAXÎ°ú Î∞õÏùÄ ÌååÏùº Í≤ΩÎ°ú Ï†ÄÏû•
      })
      .catch(err => {
        console.error(err);
        alert('Ï≤®Î∂Ä Ïã§Ìå®!');
      });
    }
  </script>
